<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    tools:context=".AttractionsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/attractionimage"
            android:scaleType="centerCrop"
            android:layout_height="320dp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backarrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@drawable/destinationcardcorners" />

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:id="@+id/attractiontitle"
        android:layout_gravity="center"
        android:text="Title"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fillViewport="true">

    <TextView
        android:id="@+id/attractiondescription"
        android:layout_width="340dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:paddingRight="15dp"
        android:paddingTop="50dp"
        android:paddingLeft="15dp"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/poppinslight"
        android:text="Description"
        android:textColor="@color/white" />

    </ScrollView>
    <TextView
        android:id="@+id/attractionaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Address"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/attractionwebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Website"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="10dp"/>


</LinearLayout>